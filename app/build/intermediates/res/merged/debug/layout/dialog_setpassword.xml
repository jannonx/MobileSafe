<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/blue_bkg"
        android:gravity="center"
        android:text="设置密码"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <!-- 密码1的 文本 -->

    <EditText
        android:id="@+id/et_dialog_password1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="#000000" />
    <!-- 密码2的 文本 -->

    <EditText
        android:id="@+id/et_dialog_password2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <!-- 两个按钮 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_dialog_confirm"
            android:background="@drawable/dialog_btn_selector"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认" >
        </Button>
        <Button
            android:id="@+id/bt_dialog_cancel"
            android:background="@drawable/dialog_btn_selector"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" >
        </Button>
    </LinearLayout>

</LinearLayout>