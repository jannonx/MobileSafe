<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dip"
    android:background="@drawable/home_gv_item_selector"
    android:layout_height="wrap_content" >

    <!-- 图片 -->

    <ImageView
        android:id="@+id/iv_item_home_gv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dip"
        android:src="@drawable/hcql" />

    <!-- 标题和描述 -->

    <LinearLayout
        android:layout_toRightOf="@id/iv_item_home_gv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        
        android:orientation="vertical" >

        <!-- 标题 -->

        <TextView
            android:id="@+id/tv_item_home_gv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="缓存清理" />
          <!-- 描述 -->

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_item_home_gv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="手机快步如飞" />
        
        
    </LinearLayout>

</RelativeLayout>