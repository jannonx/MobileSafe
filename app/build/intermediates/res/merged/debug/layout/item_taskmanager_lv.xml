<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- task图标 -->

    <ImageView
        android:id="@+id/iv_taskmanager_lv_icon"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_margin="5dip"
        android:src="@drawable/sjfd" />

    <!-- task名字和安装位置 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/iv_taskmanager_lv_icon"
        android:orientation="vertical" >

        <!-- task名字 -->

        <TextView
            android:id="@+id/tv_taskmanager_lv_taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家" />

        <TextView
            android:id="@+id/tv_taskmanager_lv_taskmemorysize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内存：22kb" />
    </LinearLayout>

    <!-- 占用大小 -->

    <CheckBox
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/cb_selector"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:id="@+id/cb_taskmanager_isselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

</RelativeLayout>