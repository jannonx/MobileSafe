<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        style="@style/title_style"
        android:text="3.设置安全号码" />
    <!-- 描述信息 -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="sim卡如果发生变化:\n就会给安全号码发送报警短信" />

    <!-- 安全号码的编辑框 -->

    <EditText
        android:id="@+id/et_setup3_safenumber"
        android:inputType="phone|number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="输入安全号码"
        android:textColorHint="#55ff0000" />
    <!-- 绑定和解绑的按钮 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:onClick="selectSafeNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_btn_selector"
            android:text="选择安全号码"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <!-- 线性布局 显示四个点 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- 默认点 -->

        <View
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@android:drawable/presence_invisible" >
        </View>

       
        <!-- 默认点 -->

        <View
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@android:drawable/presence_invisible" >
        </View>
         <!-- 选中点 -->

        <View
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@android:drawable/presence_online" />
        <!-- 默认点 -->

        <View
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@android:drawable/presence_invisible" >
        </View>
    </LinearLayout>

    <!-- 相对布局 显示图片和按钮 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/step_3" />

        <!-- 下一个 按钮 -->

        <ImageView
            
            android:onClick="nextPage"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/dialog_btn_selector"
            android:src="@drawable/next" />
        <!-- 上一个 按钮 -->

        <ImageView
            android:onClick="prevPage"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/dialog_btn_selector"
            android:src="@drawable/pre" />
    </RelativeLayout>

</LinearLayout>