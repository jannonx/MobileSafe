<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- app图标 -->

    <ImageView
        android:id="@+id/iv_appmanager_lv_icon"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_margin="5dip"
        android:src="@drawable/sjfd" />

    <!-- app名字和安装位置 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/iv_appmanager_lv_icon"
        android:orientation="vertical" >

        <!-- app名字 -->

        <TextView
            android:id="@+id/tv_appmanager_lv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家" />

        <TextView
            android:id="@+id/tv_appmanager_lv_applocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机rom" />
    </LinearLayout>

    <!-- 占用大小 -->

    <TextView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:id="@+id/tv_appmanager_lv_appsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.21mb" />

</RelativeLayout>