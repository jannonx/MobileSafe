<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- app图标 -->

    <ImageView
        android:id="@+id/iv_connectivity_lv_icon"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_margin="5dip"
        android:src="@drawable/sjfd" />

    <!-- app名字和安装位置 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/iv_connectivity_lv_icon"
        android:orientation="vertical" >

        <!-- app名字 -->

        <TextView
            android:id="@+id/tv_connectivity_lv_rcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送:100mb" />

        <TextView
            android:id="@+id/tv_connectivity_lv_snd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收：22mb" />
    </LinearLayout>

    <!-- 占用大小 -->

    <TextView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:id="@+id/tv_connectivity_lv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi" />

</RelativeLayout>